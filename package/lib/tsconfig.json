{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowJs": true,
		"strict": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"rootDir": "./",
		"types": ["@openui5/types", "@types/jquery", "@types/qunit"],
		"paths": {
			"com/github/dfenerski/ui5_universal/*": ["./src/com/github/dfenerski/ui5_universal/*"]
		}
	},
	"include": ["./src/**/*", "./test/**/*"]
}
