{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "rootDir": "./webapp",
        "types": ["@openui5/types", "@types/qunit"],
        "paths": {
            "com/github/dfenerski/ui5_universal/*": [
                "./node_modules/@ui5-universal/lib/src/com/github/dfenerski/ui5_universal/*"
            ],
            "com/github/dfenerski/ui5_universal/static_app/*": ["./webapp/*"],
            "unit/*": ["./webapp/test/unit/*"],
            "integration/*": ["./webapp/test/integration/*"]
        }
    },
    "include": ["./webapp/**/*"]
}
